# Configuration de l'application LG TV Remote

# Serveur
PORT=3001
HOST=0.0.0.0
NODE_ENV=production

# Configuration TV
TV_IP=192.168.1.100
TV_PORT=3000
TV_TIMEOUT=5000
TV_RECONNECT=3000

# Messages par défaut
MESSAGE_DURATION=3000

# Séquence d'arrêt normale (en millisecondes)
SHUTDOWN_DELAY_1=0         # Premier message immédiat
SHUTDOWN_DELAY_2=60000     # Deuxième message après 1 minute
SHUTDOWN_DELAY_3=120000    # Troisième message après 2 minutes
SHUTDOWN_DELAY_FINAL=125000 # Arrêt TV après 2 minutes 5 secondes

# Séquence d'arrêt test (en millisecondes)
SHUTDOWN_TEST_DELAY_1=0      # Premier message immédiat
SHUTDOWN_TEST_DELAY_2=10000  # Deuxième message après 10 secondes
SHUTDOWN_TEST_DELAY_3=20000  # Troisième message après 20 secondes
SHUTDOWN_TEST_DELAY_FINAL=30000 # Arrêt TV après 30 secondes

# Optionnel : Configuration réseau Docker
# SUBNET=172.20.0.0/16